<style>
/* Estilos CSS */
body{
    background-color: #fff;
    font-family: Arial, Helvetica, sans-serif;
}
/* Estilos CSS header*/
header{
    display: flex;
    justify-content: space-between;
    min-height: 70px;
    background-image: url(banner.jpg);
    align-items: center;
    padding: 10px;
}
a{
   font-size: large;
}
nav a{
    font-weight: 600;
    padding-right: 10px;
    text-decoration: none;
    color: yellow;


}
nav a:hover{
    color: white;
}

.logo-header{
    display: flex;
    align-items: center;

}

.img-logo{
    height: 50px;
    margin-right: 15px;
    border-radius: 20px 20px 20px 20px;
    
}

.joca-logo{
    text-decoration: none;
    color: yellow;
}

/* Estilos CSS carrousel*/
.nav-carrousel{
    background-color: #f29f05;
    color: #a62447;
    padding-bottom: 10px;
    font-style: oblique;
    font-weight: 600;
}
.carrousel-section{
    border-radius: 0px 0px 0px 0px;
    background-image: url(public/img/imgtienda/banner.jpg);
    background-color: #664222;
    padding: 20px;
    margin-top: -8px;
    padding-left: 5px;
}

.d-block{
    width: 63%;
    height: 300px;
    border-radius: 20px 20px 20px 20px;
}

/* Estilos CSS productos*/


.section-productos{
    background-color: #664222;
    display: flex;
    flex-wrap: wrap;
    margin-top: -8px;
}
 
.prode{
    background-color: #f29f05;
    color: #a62447;
    font-style: oblique;
    font-weight: 600px;
}
div h3{
    color: #f29f05;
}

.submit{
    font-weight: 600;
    padding-right: 10px;
    text-decoration: none;
    color: white;
}

div a:hover{
    color: yellow;
}
.vest{
  border-radius: 10%;
  width: 85%;
  height: 66%;
}

.producto{
    flex: 0 0 300px;
    padding: 10px;
    text-align: center;
    font-style: oblique;
}

footer{
    background-color: #f29f05;
    color: black;
    font-weight: 600px;
    padding-bottom: 10px;
    align-items: center;
}

.p-footer{
    text-align: center;
    align-items: center;
    margin-bottom: 10px;
}

@media (max-width:700px){
    header{
        flex-direction: column;
    }

    nav{
        padding: 10px;
    }
    footer{
        padding: 10px;
    }
    .section-productos{
        padding: 10px;
        flex-direction: column;
    }
    .vest{
        flex-direction: column;
    
    }
}
