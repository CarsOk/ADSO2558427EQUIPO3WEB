<h1>Compra deliciosas donas de todos sabores</h1>
<p>Algunos de nuestros productos:</p>
<% @donas.each do |dona| %>
  <h2><%= dona.nombre %></h2>
  <h5><%= dona.descripcion %></h5>
  <span><%= dona.precio %></span><br>
  <a href="/users/sign_up" class="submit">Comprar</a>
<% end %>

<style>
h1, h2, h5, span, p{
color: white;
}
.submit{
    font-weight: 600;
    padding-right: 10px;
    text-decoration: none;
    color: white;  
}
a:hover{
    color: yellow;
}

</style>
