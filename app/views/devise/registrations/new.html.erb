<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "Login", new_user_session_path, class: "btn btn-success" %>
      <%= link_to "Forgot password", new_user_password_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

