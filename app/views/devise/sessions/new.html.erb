<div class="container">
  <div class="container-fluid login-container" style="background-image: url('/img_login/');">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center mb-4">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
          <div class="form-group">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-control form-control-lg', placeholder: 'Email' } %>
          </div>

          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: 'form-control form-control-lg', placeholder: 'Password' } %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' } %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <%= f.button :submit, "Log in", class: 'btn btn-outline-primary btn-lg' %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success" %>
          <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
