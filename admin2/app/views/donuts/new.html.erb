<h1>Nuevo Dona</h1>

<%= form_with(model: @donut, url: product_donuts_path(@product)) do |form| %>
  <%= form.hidden_field :product_id, value: @product.id %>
  <div class="form-group">
    <%= form.label :nombre, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', required: true %>
    <% if @donut.errors.has_key?(:name) %>
      <p class="text-danger"><%= @donut.errors[:name].first %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :descripcion, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', required: true %>
    <% if @donut.errors.has_key?(:description) %>
      <p class="text-danger"><%= @donut.errors[:description].first %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :precio, class: 'form-label' %>
    <%= form.number_field :price, class: 'form-control', required: true %>
    <% if @donut.errors.has_key?(:price) %>
      <p class="text-danger"><%= @donut.errors[:price].first %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :imagen, class: 'form-label' %>
    <%= form.file_field :image, class: 'form-control' %>
    <% if @donut.errors.has_key?(:image) %>
      <p class="text-danger"><%= @donut.errors[:image].first %></p>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn btn-primary' %>
    <%= link_to 'Cancelar', product_donuts_path(@product), class: 'btn btn-secondary' %>
  </div>
<% end %>