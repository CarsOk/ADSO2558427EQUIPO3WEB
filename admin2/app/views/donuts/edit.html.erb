<div class="container">
  <h1>Editar Dona</h1>

  <%= form_with(model: [@product, @donut], url: product_donut_path(@product, @donut), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :nombre, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :descripcion, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :precio, class: 'form-label' %>
      <%= form.number_field :price, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :imagen, class: 'form-label' %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Guardar', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', product_donut_path(@product, @donut), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>