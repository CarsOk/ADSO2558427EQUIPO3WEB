<!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden">
  <style>
    /* Estilos CSS del fondo y formas radiales */
    /* ... */

    .bg-glass {
      background-color: hsla(0, 0%, 100%, 0.9) !important;
      background-color: hsla(0, 0%, 100%, 0.5) !important;
      
    }
    .container px-4 py-5 px-md-5 text-center text-lg-start my-5{
      
    }
  </style>

  <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5" style="background-image: url(<%= image_path("produ_nombre.jpg") %>); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="row gx-lg-5 align-items-center mb-5">
      <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
        <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
       
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
        <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
        <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

        <div class="card bg-glass">
          <div class="card-body px-4 py-5 px-md-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control font-weight-bold", required: true, autofocus: true %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control", required: true %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control", required: true %>
              </div>

              <div class="form-group">
               <%= f.submit "Sign up", class: "btn btn-primary" %>
              </div>

            <% end %>

            <%= link_to "Login", new_user_session_path, class: "btn btn-success" %>
            <%= link_to "Forgot password", new_user_password_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->


