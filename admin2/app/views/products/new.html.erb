<h1>Crear nuevo producto</h1>

<%= form_with model: @product do |form| %>
  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :name, class: 'form-control', required: true %>
    <% if @product.errors.has_key?(:name) %>
      <p class="text-danger"><%= @product.errors[:name].first %></p>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :descripcion %>
    <%= form.text_area :description, class: 'form-control', required: true %>
    <% if @product.errors.has_key?(:description) %>
      <p class="text-danger"><%= @product.errors[:description].first %></p>
    <% end %>
  </div>
  
  <%= form.submit 'Guardar', class: 'btn btn-primary' %>
<% end %><br>

<%= link_to 'Volver', products_path, class: 'btn btn-secondary' %>
